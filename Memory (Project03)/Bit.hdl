/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    Mux(a=DFFout, b=in, sel=load, out=Muxout);
    DFF(in=Muxout, out=DFFout);
    Mux(a=false, b=true, sel=DFFout, out=out);
}
